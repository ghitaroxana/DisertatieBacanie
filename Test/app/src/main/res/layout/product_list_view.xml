<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">
    <ListView
        android:id="@+id/productListLV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
    <ImageView
        android:id="@+id/full_image"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_weight="0.62"
        android:adjustViewBounds="false"
        android:maxHeight="250dp"
        android:maxWidth="500dp"
        android:layout_gravity="center"

        android:src="@drawable/bio1" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/full_image">

        <LinearLayout
            android:id="@+id/mygallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/full_image"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <TextView
        android:id="@+id/fullPriceTV"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mygallery"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/productPrice"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ff14ff7e"
        android:textSize="@dimen/abc_text_size_display_1_material" />


    <TextView
        android:id="@+id/full_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/fullPriceTV"
        android:layout_marginLeft="35dp"
        android:text="@string/productName"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/abc_text_size_display_1_material" />

    <TextView
        android:id="@+id/fullDateFromToTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/full_item_name"
        android:text="data"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/fullLocalityTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/fullDateFromToTV"
        android:text="@string/locality"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <TextView
        android:id="@+id/fullCountyTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/fullLocalityTV"
        android:text="@string/county"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/userDetailsTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/fullCountyTV"
        android:text="@string/userDetails"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <TextView
        android:id="@+id/phoneNumberTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/userDetailsTV"
        android:text="@string/phoneNumber"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/full_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="true"
        android:text="descriere aici am sa pun mai mult text pentru ca trebuie.trebuie si mai mult"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_gravity="bottom"
        android:gravity="bottom|start|end"
        android:layout_weight="0.20" />

</LinearLayout>


